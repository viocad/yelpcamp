<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT", method="POST">
                <div class="form-group">
                    <!--bootstrap built-in form-group can group things together and give some space in between each group-->
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campgroundId %>">Back</a>
        </div>
    </div>

<% include ../partials/footer %>