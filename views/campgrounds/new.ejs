<% include ../partials/header %>
<!-- ../ will bring us back to parent folder first-->

    <div class="row">
        <h1 style="text-align: center;">Creat a New Campground</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <!--the enctype attribute will allow us to have the file upload feature-->
                <div class="form-group">
                    <!--bootstrap built-in form-group can group things together and give some space in between each group-->
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="price">Price (per night)</label>
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
                    <!--step will show up and down arrow next to the input-->
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="campground[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>

<% include ../partials/footer %>