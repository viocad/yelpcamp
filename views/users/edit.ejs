<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= currentUser.username %>'s Profile</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/users/<%= currentUser._id %>?_method=PUT", method="POST">
                
                <div class="form-group">
                    <label for="location">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]" value="<%= currentUser.firstName %>">
                </div>
                
                <div class="form-group">
                    <label for="location">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]" value="<%= currentUser.lastName %>">
                </div>
                
                <div class="form-group">
                    <label for="location">Email</label>
                    <input class="form-control" type="email" name="user[email]" value="<%= currentUser.email %>">
                </div>
                
                <div class="form-group">
                    <label for="location">Avatar (url Link)</label>
                    <input class="form-control" type="text" name="user[avatar]" value="<%= currentUser.avatar %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
                
            </form>
            <a href="/users/<%= currentUser._id %>">Back</a>
        </div>
    </div>

<% include ../partials/footer %>