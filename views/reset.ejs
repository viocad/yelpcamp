<% include ./partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Reset Password</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/reset/<%= token %>", method="POST">
                
                <div class="form-group">
                    <label for="location">New Password</label>
                    <input class="form-control" type="password" name="password" placeholder="New Password">
                </div>
                
                <div class="form-group">
                    <label for="location">Confirm Password</label>
                    <input class="form-control" type="password" name="confirm" placeholder="Confirm Password">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Password</button>
                </div>
                
            </form>
            <a href="/login">Back</a>
        </div>
    </div>

<% include ./partials/footer %>